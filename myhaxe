package;

import flash.events.MouseEvent;
import openfl.display.Sprite;
import openfl.Lib;

class Main {
	static function main() {
	var k1:Kvadrat = new Kvadrat(50, 50, 300, 300);
	var k2:Kvadrat = new Kvadrat(50,350,400,650);
	}
}
class Kvadrat {
	var okno:flash.display.MovieClip;
	var x1:Int;
	var y1:Int;
	var x2:Int;
	var y2:Int;
	
	public function new (arg1:Int, arg2:Int, arg3:Int, arg4:Int){
	okno = flash.Lib.current;
	okno.addEventListener(MouseEvent.MOUSE_DOWN,function(e){trace(e);});
	x1 = arg1;
	y1 = arg2;
	x2 = arg3;
	y2 = arg4;
	
	okno.graphics.beginFill(0xFFAA00);
    okno.graphics.moveTo(x1,y1); // От куда будем рисовать ,  Левый верхний угол
    okno.graphics.lineTo(x2,y1); // Правый верхний угол
    okno.graphics.lineTo(x2,y2); // Правый нижний угол
    okno.graphics.lineTo(x1,y2); // Левый нижний угол
    okno.graphics.endFill();
		
	}
}

